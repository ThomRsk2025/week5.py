class Animal:
    def move(self):
        print("The animal moves in its own way.")

class Dog(Animal):
    def move(self):
        print("The dog runs across the field, chasing a ball. ğŸ•ğŸ’¨")

class Fish(Animal):
    def move(self):
        print("The fish swims gracefully through the coral reef. ğŸŸğŸŒŠ")

class Bird(Animal):
    def move(self):
        print("The bird flaps its wings and soars above the trees. ğŸ¦ğŸŒ³")

class Vehicle:
    def move(self):
        print("The vehicle moves in its own way.")

class Car(Vehicle):
    def move(self):
        print("The car speeds down the highway, tires humming. ğŸš—ğŸ›£ï¸")

class Plane(Vehicle):
    def move(self):
        print("The plane lifts off the runway and glides through the clouds. âœˆï¸â˜ï¸")

class Boat(Vehicle):
    def move(self):
        print("The boat cuts through the waves, leaving a foamy trail. ğŸš¤ğŸŒŠ")

# Create a list of mixed objects
objects = [Dog(), Fish(), Bird(), Car(), Plane(), Boat()]

# Simulate each object's movement
for obj in objects:
    obj.move()
